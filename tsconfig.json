{
	"compilerOptions": {
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"allowJs": true,
		"baseUrl": ".",
		"outDir": "dist",
		"noEmitOnError": true,
		"removeComments": false,
		"sourceMap": false,
		"types": ["vitest/globals"],
		"paths": {
			"@/*": ["src/*"],
			"@/types/*": ["types/*"],
			"@/utils/*": ["utils/*"]
		}
	},
	"include": ["src", "tests"],
	"exclude": ["node_modules", "dist"]
}
